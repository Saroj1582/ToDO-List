<%- include("partials/header.ejs") %>


<main class="custom-container">
<div class="container-div"> 
        <h1><%= listTitle %></h1>
        <div class="item-class">
            <% listItems.forEach(items => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="itemId" value="<%= items._id %>" onchange="this.form.submit()">
                        <P class="strikethrough"><%= items.itemName %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>">
                </form>
            <% }); %>
   

            <form class="form-class" action="/" method="post">
                <input class="input-item" type="text" placeholder="New Item" name="newItem">
                <button class="custom-btn" name="listName" value="<%= listTitle %>" type="submit">+</button>
            </form>
        </div>
    </div>
</main>


<%- include("partials/footer.ejs") %>